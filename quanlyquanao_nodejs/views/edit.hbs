<form  action="/edit/{{object.masp}}"  method="post"
 class="container" style="padding: 30px;  max-width: 400px; margin: 10px auto; background-color: aquamarine;">
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4 ">
    <div class="form-outline mb-4 " style="text-align: center;">
      <h3> Update</h3>
    </div>
   
  
  
    <div class="col">
      <div class="form-outline">
        <input type="text" id="tensp" class="form-control" name="tensp" required value={{object.tensp}} />
        <label class="form-label" for="form3Example1">Tên sản phẩm</label>
      </div>
    </div>
   
  </div>

  <!-- Ảnh  input -->
  <div class="form-outline mb-4">
    {{#if object.imagesp}}
    <input type="text" id="imagesp" class="form-control" name="imagesp" value="{{object.imagesp}}" required>
    <label class="form-label" for="imagesp">ảnh sản phẩm</label>
    {{/if}}
  </div>
  <div class="form-outline mb-4">
    <input type="text" id="sizesp" class="form-control" name="sizesp" required
      value={{object.sizesp}} />
    <label class="form-label" for="form3Example3">kích thước</label>
  </div>
  <div class="form-outline mb-4">
    <input type="number" id="giasp" class="form-control" name="giasp" required
      value={{object.giasp}} />
    <label class="form-label" for="giasp">giá</label>
  </div>


  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4" style="margin: 0 auto;">Edit</button>



</form>